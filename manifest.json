{
  "manifest_version": 3,
  "name": "复制图片 Base64",
  "version": "1.6",
  "description": "右键图片，一键复制 Base64 到剪贴板，支持压缩质量",
  "permissions": [
    "contextMenus",
    "scripting",
    "clipboardWrite",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}